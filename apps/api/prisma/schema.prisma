// ENUMS
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

enum Role {
  USER
  ADMIN
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum Currency {
  TRY
  USD
  EUR
  GBP
  OTHER
}

enum RecurrencePeriod {
  NONE
  WEEKLY
  MONTHLY
  YEARLY
}

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// MODELS
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

model User {
  id           String @id @default(uuid())
  email        String @unique
  passwordHash String
  role         Role   @default(USER)
  baseCurrency String @default("TRY")

  categories Category[]
  expenses   Expense[]
  incomes    Income[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id       String       @id @default(uuid())
  name     String
  type     CategoryType
  isGlobal Boolean      @default(false)

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  expenses Expense[]
  incomes  Income[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([type])
}

model Expense {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  amount   Decimal
  currency String
  date     DateTime

  // ðŸ’« Recurrence fields
  recurrencePeriod RecurrencePeriod @default(NONE)
  recurrenceStart  DateTime?
  recurrenceEnd    DateTime?

  // ðŸ’¿ Subscription flag (Netflix etc.)
  isSubscription Boolean @default(false)

  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([date])
  @@index([recurrencePeriod])
}

model Income {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  amount   Decimal
  currency String
  date     DateTime

  // ðŸ’« Recurrence fields 
  recurrencePeriod RecurrencePeriod @default(NONE)
  recurrenceStart  DateTime?
  recurrenceEnd    DateTime?

  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([date])
  @@index([recurrencePeriod])
}
